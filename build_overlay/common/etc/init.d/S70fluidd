#!/bin/sh
#
# Starts busybox httpd for fluidd.
#

WEBROOT=/opt/fluidd
PID_FILE=/run/httpd_fluidd.pid

start() {
    # start busybox httpd
    start-stop-daemon -S -b -m -p $PID_FILE --exec httpd -- -p 4001 -f -h $WEBROOT
}

stop() {
    start-stop-daemon -K -p $PID_FILE
}
restart() {
    stop
    sleep 1
    start
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        restart
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
