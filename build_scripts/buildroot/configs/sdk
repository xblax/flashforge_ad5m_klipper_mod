# Buildroot configuration used to build the SDK with external toolchain.
# This config is also used as the baseline for the target variants.

# Arch and Toolchain
BR2_arm=y
BR2_cortex_a7=y
BR2_ARM_FPU_NEON_VFPV4=y
BR2_KERNEL_HEADERS_5_4=y
BR2_GCC_VERSION_14_X=y
BR2_BINUTILS_VERSION_2_44_X=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_BUILDROOT_FORTRAN=y
BR2_CCACHE=y
BR2_OPTIMIZE_3=y
BR2_ENABLE_LTO=y
# For building klipper mcu firmware for STM32
BR2_PACKAGE_HOST_ARM_GNU_TOOLCHAIN_SUPPORTS=y

# SDK Specific Options
BR2_INIT_NONE=y
BR2_SYSTEM_BIN_SH_NONE=y
# BR2_TARGET_ROOTFS_TAR is not set

# Target Python
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_CURSES=y
BR2_PACKAGE_PYTHON3_DECIMAL=y
BR2_PACKAGE_PYTHON3_PYEXPAT=y
BR2_PACKAGE_PYTHON3_READLINE=y
BR2_PACKAGE_PYTHON3_SQLITE=y
BR2_PACKAGE_PYTHON3_SSL=y
BR2_PACKAGE_PYTHON3_XZ=y
BR2_PACKAGE_PYTHON3_ZLIB=y

# Host Python
BR2_PACKAGE_HOST_PYTHON3=y
BR2_PACKAGE_HOST_PYTHON3_SSL=y

# Curl
BR2_PACKAGE_LIBCURL=y
# BR2_PACKAGE_LIBCURL_COOKIES_SUPPORT is not set
# BR2_PACKAGE_LIBCURL_EXTRA_PROTOCOLS_FEATURES is not set

# Crypto Libs
BR2_PACKAGE_LIBOPENSSL=y
BR2_PACKAGE_LIBSODIUM=y
BR2_PACKAGE_LIBXCRYPT=y

# Camera Libs
BR2_PACKAGE_LIBV4L=y
BR2_PACKAGE_LIBCAMERA=y
BR2_PACKAGE_LIBCAMERA_V4L2=y

# Compression Libs
BR2_PACKAGE_ZLIB=y
BR2_PACKAGE_LIBZLIB=y
BR2_PACKAGE_HAS_ZLIB=y
BR2_PACKAGE_PROVIDES_ZLIB="libzlib"

# Graphics Libs
BR2_PACKAGE_JPEG=y
BR2_PACKAGE_JPEG_TURBO=y
BR2_PACKAGE_HAS_JPEG=y
BR2_PACKAGE_PROVIDES_JPEG="jpeg-turbo"
BR2_PACKAGE_LIBPNG=y

# System Libs
BR2_PACKAGE_LIBBSD
BR2_PACKAGE_LIBEVENT=y
BR2_PACKAGE_LIBTIRPC=y
BR2_PACKAGE_LIBUV=y
