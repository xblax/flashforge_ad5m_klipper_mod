config BR2_PACKAGE_KLIPPER
	bool "klipper"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON_GREENLET
	select BR2_PACKAGE_PYTHON_CFFI
	select BR2_PACKAGE_PYTHON_JINJA2
	select BR2_PACKAGE_PYTHON_MARKUPSAFE
	select BR2_PACKAGE_PYTHON_SERIAL
	select BR2_PACKAGE_PYTHON_CAN
	select BR2_PACKAGE_PYTHON_SETUPTOOLS
	select BR2_PACKAGE_PYTHON_MSGSPEC
	help
	  Klipper is a 3d-printer firmware

	  https://github.com/Klipper3d/klipper

config BR2_PACKAGE_KLIPPER_CONFIGS
    string "Klipper MCU Configuration Files"
    depends on BR2_PACKAGE_KLIPPER
    help
      Specify a space-separated list of MCU configuration files for firmware 
      compilation. Each file must be a valid Klipper configuration file in 
      the .config format.

      Example: "/path/to/mcu1.config /path/to/mcu2.config"

      Note: Configuration file names must be unique.

      If this field is left empty, no firmware will be generated.
